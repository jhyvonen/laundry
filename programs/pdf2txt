#!/usr/bin/env bash

set -u

INPUT=$1
OUTPUT=$2
if [ "$CI" = "true" ]; then
  MEMORY_LIMIT=0
else
  MEMORY_LIMIT="${LAUNDRY_MEMORY_LIMIT:-1g}"
fi


docker run \
  --runtime="${LAUNDRY_DOCKER_RUNTIME:-runsc}" \
  --network=none \
  --ipc=private \
  --memory $MEMORY_LIMIT \
  --cap-drop=ALL \
  -i \
  --rm \
  laundry-programs \
  /bin/bash -c 'gs -q -dBATCH -dNOPAUSE -dSAFER -sDEVICE=txtwrite -sOutputFile=- -' \
  < "$INPUT" > "$OUTPUT"
